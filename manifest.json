{
    "name": "Biboumi XMPP->IRC Gateway",
    "id": "biboumi",
    "packaging_format": 1,
    "description": {
        "en": "XMPP gateway for the IRC network.",
        "fr": "Passerelle XMPP pour le réseau IRC."
    },
    "version": "8.0~ynh1",
    "url": "https://biboumi.louiz.org/",
    "license": "free",
    "maintainer": {
        "name": "pitchum",
        "email": "pitchum@yunohost.org"
    },
    "requirements": {
        "yunohost": ">= 3.0.0"
    },
    "multi_instance": false,
    "services": [
        "metronome"
    ],
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "type": "domain",
                "ask": {
                    "en": "Choose the domain that will host biboumi.",
                    "fr": "Choisissez le nom de domaine qui hébergera biboumi."
                },
                "example": "example.com"
            },
            {
                "name": "admin",
                "type": "user",
                "ask": {
                    "en": "Choose an admin user",
                    "fr": "Choisissez l’administrateur"
                },
                "example": "johndoe"
            }
        ]
    }
}
